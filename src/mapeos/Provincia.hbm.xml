<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.grupo25.tp_obj2_hibernate.model.entities.Provincia" table="provincias">
        <id column="id" name="id">
            <generator class="identity" />
        </id>
        <property name="nombre" column="nombre" type="string" />
        <property name="createAt" column="create_at_provincia" type="timestamp" />
        <property name="updateAt" column="update_at_provincia" type="timestamp" />
        
        <!-- RelaciÃ³n uno a muchos con Localidad -->
        <set name="localidades" cascade="all">
            <key column="provincia_id" />
            <one-to-many class="com.grupo25.tp_obj2_hibernate.model.entities.Localidad" />
        </set>
    </class>
</hibernate-mapping> 