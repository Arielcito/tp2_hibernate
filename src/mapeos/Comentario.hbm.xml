<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.grupo25.tp_obj2_hibernate.model.entities.Comentario" table="comentarios">
        <id column="id" name="id">
            <generator class="identity" />
        </id>
        <property name="mensaje" column="mensaje" type="string" />
        <property name="fecha" column="fecha" type="java.time.LocalDateTime" />
        <property name="createAt" column="create_at_comentario" type="timestamp" />
        <property name="updateAt" column="update_at_comentario" type="timestamp" />
        
        <!-- Relación muchos a uno con Ticket -->
        <many-to-one name="ticket" column="ticket_id" class="com.grupo25.tp_obj2_hibernate.model.entities.Ticket" />
        
        <!-- Relación muchos a uno con Usuario -->
        <many-to-one name="usuario" column="usuario_id" class="com.grupo25.tp_obj2_hibernate.model.entities.Usuario" />
    </class>
</hibernate-mapping> 