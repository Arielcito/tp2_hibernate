<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.grupo25.tp_obj2_hibernate.model.entities.Localidad" table="localidades">
        <id column="id" name="id">
            <generator class="identity" />
        </id>
        <property name="nombre" column="nombre" type="string" />
        <property name="createAt" column="create_at_localidad" type="timestamp" />
        <property name="updateAt" column="update_at_localidad" type="timestamp" />
        
        <!-- RelaciÃ³n muchos a uno con Provincia -->
        <many-to-one name="provincia" column="provincia_id" class="com.grupo25.tp_obj2_hibernate.model.entities.Provincia" />
    </class>
</hibernate-mapping> 